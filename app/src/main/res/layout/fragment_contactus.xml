<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:orientation="vertical"
    tools:context=".ui.contact.ContactFragment" >

    <com.github.nikartm.button.FitButton
        android:id="@+id/callbtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="0dp"
        android:elevation="6dp"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="#FFFFFF"
        app:fb_borderColor="#000000"
        app:fb_borderWidth="1dp"
        app:fb_cornerRadius="0dp"

        app:fb_divColor="#000000"
        app:fb_divHeight="40dp"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_contact_us"
        app:fb_iconColor="#00000000"
        app:fb_iconHeight="50dp"
        app:fb_iconMarginEnd="16dp"
        app:fb_iconMarginStart="30dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="50dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Call us"
        app:fb_textColor="#000000"
        app:fb_textPaddingStart="10dp"
        app:fb_textSize="@dimen/_15sdp" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/mailbtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="6dp"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="#FFFFFF"
        app:fb_borderColor="#000000"
        app:fb_borderWidth="1dp"
        app:fb_cornerRadius="0dp"
        app:fb_divColor="#000000"
        app:fb_divHeight="40dp"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_mail"
        app:fb_iconColor="#00000000"
        app:fb_iconHeight="50dp"
        app:fb_iconMarginEnd="16dp"
        app:fb_iconMarginStart="30dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="50dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Mail us"
        app:fb_textColor="#000000"
        app:fb_textPaddingStart="10dp"
        app:fb_textSize="@dimen/_15sdp" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/fbbtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="6dp"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="#FFFFFF"
        app:fb_borderColor="#000000"
        app:fb_borderWidth="1dp"
        app:fb_cornerRadius="0dp"
        app:fb_divColor="#000000"
        app:fb_divHeight="40dp"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_facebook"
        app:fb_iconColor="#00000000"
        app:fb_iconHeight="50dp"
        app:fb_iconMarginEnd="16dp"
        app:fb_iconMarginStart="30dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="50dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Follow us on Facebook"
        app:fb_textColor="#000000"
        app:fb_textPaddingStart="10dp"
        app:fb_textSize="@dimen/_15sdp" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/instabtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="6dp"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="#FFFFFF"
        app:fb_borderColor="#000000"
        app:fb_borderWidth="1dp"
        app:fb_cornerRadius="0dp"
        app:fb_divColor="#000000"
        app:fb_divHeight="40dp"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_instagram_sketched"
        app:fb_iconColor="#00000000"
        app:fb_iconHeight="50dp"
        app:fb_iconMarginEnd="16dp"
        app:fb_iconMarginStart="30dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="50dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Follow us on Instagram"
        app:fb_textColor="#000000"
        app:fb_textPaddingStart="10dp"
        app:fb_textSize="@dimen/_15sdp" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/twiterbtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="6dp"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="#FFFFFF"
        app:fb_borderColor="#000000"
        app:fb_borderWidth="1dp"
        app:fb_cornerRadius="0dp"
        app:fb_divColor="#000000"
        app:fb_divHeight="40dp"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_twitter"
        app:fb_iconColor="#00000000"
        app:fb_iconHeight="50dp"
        app:fb_iconMarginEnd="16dp"
        app:fb_iconMarginStart="30dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="50dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Follow us on Twitter"
        app:fb_textColor="#000000"
        app:fb_textPaddingStart="10dp"
        app:fb_textSize="@dimen/_15sdp" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/locationbtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="6dp"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="#FFFFFF"
        app:fb_borderColor="#000000"
        app:fb_borderWidth="1dp"
        app:fb_cornerRadius="0dp"
        app:fb_divColor="#000000"
        app:fb_divHeight="40dp"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_location"
        app:fb_iconColor="#00000000"
        app:fb_iconHeight="50dp"
        app:fb_iconMarginEnd="16dp"
        app:fb_iconMarginStart="30dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="50dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Reach us on map"
        app:fb_textColor="#000000"
        app:fb_textPaddingStart="10dp"
        app:fb_textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/Contact"
        android:textColor="#1E1B1B" />
</LinearLayout>