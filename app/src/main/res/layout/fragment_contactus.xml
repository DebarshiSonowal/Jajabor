<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:orientation="vertical"
    tools:context=".ui.contact.ContactFragment" >

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/facebook_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_weight="1.5"
        app:button_icon="@drawable/ic_facebook"
        app:button_icon_height="@dimen/_25sdp"
        app:button_icon_width="@dimen/_25sdp"
        app:expandable_area_color="#375695"
        app:hide_text="            Follow us on Facebook "
        app:hide_text_size="@dimen/_5sdp"
        app:icon_button_color="#4267b1"
        app:magic_button_size="@dimen/_40sdp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/insta_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_weight="1.5"
        app:button_icon="@drawable/ic_instagram_sketched"
        app:button_icon_height="@dimen/_25sdp"
        app:button_icon_width="@dimen/_25sdp"
        app:expandable_area_color="#F2013A"
        app:hide_text="            Follow us on Instagram "
        app:hide_text_size="@dimen/_5sdp"
        app:icon_button_color="#FFDEE6"
        app:magic_button_size="@dimen/_40sdp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/twitter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_weight="1.5"
        app:button_icon="@drawable/ic_twitter"
        app:button_icon_height="@dimen/_25sdp"
        app:button_icon_width="@dimen/_25sdp"
        app:expandable_area_color="#00B0EC"
        app:hide_text="      Follow us on Twitter"
        app:hide_text_size="@dimen/_5sdp"
        app:icon_button_color="#00B5F2"
        app:magic_button_size="@dimen/_40sdp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/gmail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_weight="1.5"
        app:button_icon="@drawable/ic_gmail"
        app:button_icon_height="@dimen/_25sdp"
        app:button_icon_width="@dimen/_25sdp"
        app:expandable_area_color="#FF2C2C"
        app:hide_text="Mail us"
        app:hide_text_size="@dimen/_5sdp"
        app:icon_button_color="#E3E7EA"
        app:magic_button_size="@dimen/_40sdp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/gmap_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_weight="1.5"
        app:button_icon="@drawable/ic_google_maps"
        app:button_icon_height="@dimen/_25sdp"
        app:button_icon_width="@dimen/_25sdp"
        app:expandable_area_color="#60A850"
        app:hide_text="Directions"
        app:hide_text_size="@dimen/_5sdp"
        app:icon_button_color="#CCE1D2"
        app:magic_button_size="@dimen/_40sdp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/call_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_weight="1.5"
        app:button_icon="@drawable/ic_contact_us"
        app:button_icon_height="@dimen/_25sdp"
        app:button_icon_width="@dimen/_25sdp"
        app:expandable_area_color="#51B4FF"
        app:hide_text="Contact Us"
        app:hide_text_size="@dimen/_5sdp"
        app:icon_button_color="#A9DAFF"
        app:magic_button_size="@dimen/_40sdp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:text="We are happy to help you"
        android:textColor="#1E1B1B" />
</LinearLayout>