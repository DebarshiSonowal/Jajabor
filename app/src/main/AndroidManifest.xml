        <activity
            android:name=".ProductView"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".MyMessagingService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
